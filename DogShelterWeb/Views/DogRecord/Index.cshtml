@model IEnumerable<Category>

@{
    ViewData["Title"] = "Index";
}

    <h3>This table represent all dogs that are currently being nurtured and all of them are looking for family to be a part of.</h3>
<br />

    <div class="row">
        <div class="col-sm">
            <a asp-controller="DogRecord" asp-action="Add-dogs" class="btn btn-primary">
                Add new dogs to the list
            </a>
        </div>
    </div>

<br />

<div class="table">
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <div class="container">
                <div class="row">
                <div class="col-4">
                    Name
                </div>
                <div class="col-4">
                    Age
                    </div>
                <div class="col-4">
                    Date-Time Arrived
                </div>
            </div>
        </thead>

        <tbody>
            @foreach(var obj in Model)
            {
                <tr>
                    <td width="50%">
                        @obj.Name
                    </td>
                <td width="50%">
                        @obj.Age
                    </td>
                <td width="50%">
                        @obj.DateTimeArrived
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


